<h1>Edit Pictures</h1>

<p>
  <%= link_to("Back", "/pictures/#{@picture.id}") %>
</p>

<%= form_for(@picture, url: "/pictures/#{@picture.id}") do |f| %>

<p>
  <%= f.label :artist %><br>
  <%= f.text_field :artist %><br>
</p>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
</p>
<p>
  <%= f.label :url %><br>
  <%= f.text_field :url %><br>
</p>
<p>
  <%= f.submit %>
</p>

