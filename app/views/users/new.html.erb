<h1>Sign Up Here!</h1>
<%= link_to("Back to Pictures", "/pictures") %>

<%= form_for @user do |f| %>
<div class = 'field'>
<p>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
</p>
<p>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
</p>
<p>
  <%= f.label :password_confirmation %><br>
  <%= f.text_field :password_confirmation %><br>
</p>
</div>
<p>
  <%= f.submit "Save" %>
</p>

<% end %>
